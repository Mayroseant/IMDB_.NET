@model MovieMayDL.Models.User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Signup";
    <style>
        body {
            background-image: url('../images/Signup.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
}
<div class="text-center">
    <h1 class="text-light">Signup</h1>
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="p-4 m-2 border border-light">
            @* Form *@
            <form class="form-horizontal" asp-action="Signup" onsubmit="return showLoader(this)">
                <div class="form-row">
                    @* Role *@
                    <div class="col-md-6 form-group">
                        <label class="float-left control-label text-light font-weight-bolder">Role</label>
                        <select asp-for="UserRole" class="form-control" required>
                            <option disabled selected>--Select a Role--</option>
                            <option>Admin</option>
                            <option>User</option>
                        </select>
                    </div>
                    @* Email *@
                    <div class="col-md-6 form-group">
                        <label class="float-left control-label text-light font-weight-bolder">Email</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="Enter email id" required />
                    </div>
                </div>
                <div class="form-row">
                    @* Name *@
                    <div class="col-md-6 form-group">
                        <label class="float-left control-label text-light font-weight-bolder">Name</label>
                        <input asp-for="Name" class="form-control" type="text" placeholder="Enter name" required />
                    </div>
                    @* Pwd *@
                    <div class="col-md-6 form-group">
                        <label class="float-left control-label text-light font-weight-bolder">Password</label>
                        <input asp-for="Pwd" class="form-control" type="password" placeholder="Enter password" required />
                    </div>
                </div>
                @* Button *@
            <div class="form-group text-light font-weight-bolder">
                <input type="submit" class="form-control btn btn-success" value="Signup" />
                Already have an Account? <a asp-area="" asp-controller="User" asp-action="Login" class="text-warning" onclick="return showLoader(this)">Login</a>
            </div>
            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
@{
    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }
}