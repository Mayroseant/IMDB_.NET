@model MovieMayDL.Models.User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Login";
    <style>
        body {
            background-image: url('../images/Signup.jpg');
            background-repeat: no-repeat;
            background-size: cover;
        }
    </style>
}
<div class="text-center">
    <h1 class="text-light">Login</h1>
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="p-4 m-2 border border-light col-sm-4">
            <form class="form-horizontal" asp-action="Login" onsubmit="return showLoader(this)">
                <div class="form-group">
                    <label class="float-left control-label text-light font-weight-bolder">Role</label>
                    <select asp-for="UserRole" class="form-control" required>
                        <option disabled selected>--Select a Role--</option>
                        <option>Admin</option>
                        <option>User</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="float-left control-label text-light font-weight-bolder">Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Enter email id" required />
                </div>
                <div class="form-group">
                    <label class="float-left control-label text-light font-weight-bolder">Password</label>
                    <input asp-for="Pwd" class="form-control text-dark" type="password" placeholder="Enter password" required />
                </div>
                <div class="form-group text-light font-weight-bolder">
                    <input type="submit" class="form-control btn btn-success" value="Login" />
                    New here? <a asp-area="" asp-controller="User" asp-action="Signup" class="text-warning" onclick="return showLoader(this)">Signup</a>
                </div>
            </form>
        </div>
        <div class="col-sm-4"></div>
    </div>
</div>
@{
    if (TempData["msg"] != null)
    {
        <script>
            alert('@TempData["msg"]')
        </script>
    }
}